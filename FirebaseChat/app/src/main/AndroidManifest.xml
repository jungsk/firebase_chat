<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="futurewiz.cou.kr.firebasechat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.SignInActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".login.SignUpActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".chat.ChattingActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".etc.ProfileActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".etc.SettingActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".frends.FriendsAddActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

    </application>

</manifest>